<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/download"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="32sp"
            android:text="بازیابی اطلاعات برنامه"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:textSize="16sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:lineSpacingExtra="12dp"
            android:text="در این بخش میتوانید فایل های پشتیبانی که در گذشته از برنامه دریافت کرده اید را بارگزاری کرده و اطلاعات خود را برگردانید "
            />

        <Button
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="انتخاب فایل از حافظه دستگاه"
            android:background="@color/primary_dark"
            android:id="@+id/Choose"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/filename"
            android:text="هیچ فایلی انتخاب نشده است"/>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="شروع بازیابی اطلاعات"
            android:background="@color/colorPrimary"
            android:id="@+id/startImport"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>