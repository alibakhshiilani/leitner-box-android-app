<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:paddingLeft="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تنظیمات اپ جعبه لایتنر"
                android:paddingRight="14dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/titleBarText"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:background="?attr/selectableItemBackground"
                android:id="@+id/backBtn"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="8dp"
                android:paddingLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow"
                android:tint="#ffffff"
                android:clickable="true"
                android:layout_gravity="left"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toolbar_shadow"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:id="@+id/lockSwitch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فعال سازی قفل برنامه"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:id="@+id/lockText"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:id="@+id/timerSwitch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فعال سازی تایمر مرور کارت"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:id="@+id/timerText"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تغییر فونت"
                        android:id="@+id/changeFontBtn" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فونت برنامه"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:id="@+id/fontText"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />


                </LinearLayout>






                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تغییر"
                        android:id="@+id/changePasswordBtn" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تغییر گذرواژه برنامه"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:id="@+id/passChangeText"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:id="@+id/saveColorButton" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="رنگ برنامه"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:id="@+id/textView3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>


            </TableLayout>
        </ScrollView>


</LinearLayout>
