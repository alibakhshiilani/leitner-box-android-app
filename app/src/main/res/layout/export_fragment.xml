<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/export"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="32sp"
            android:text="دریافت خروجی اطلاعات"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:textSize="16sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:lineSpacingExtra="12dp"
            android:text="در این بخش میتوانید یک فایل پشتیبان از اطلاعات نرم افزار تهیره کنید تا در صورت بروز مشکل در نرم افزار با استفاده از این فایل اطلاعات خود را بازیابی نمایید !"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:textSize="16sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:lineSpacingExtra="12dp"
            android:text="فایل در Folder به نام leitnerbox ذخیره می گردد"/>
        <Button
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:text="ذخیره فایل در حافظه دستگاه"
            android:background="@color/colorPrimary"
            android:id="@+id/exportNow"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>